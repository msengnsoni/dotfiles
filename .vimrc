" Configuration

" Basic setting

filetype plugin indent on
syntax on
inoremap jk <ESC>
let mapleader = " "
set shell=/bin/zsh
set showmode
set showcmd
set showmatch
set hidden
set number
set ignorecase
set expandtab
set hlsearch
set incsearch
set smartcase
set laststatus=2
set nocompatible
set autoindent
set wildmenu
set ruler
set fenc=utf-8
set virtualedit=onemore
set visualbell
set wrap
set linebreak
set noswapfile
set nobackup
set autoread
set cursorline
